&usbotg1 {
	dr_mode = "otg";
	over-current-active-low;
	pinctrl-names = "default", "sleep";
	pinctrl-0 = <&pinctrl_usbotg1>;
	pinctrl-1 = <&pinctrl_usbotg1>;
