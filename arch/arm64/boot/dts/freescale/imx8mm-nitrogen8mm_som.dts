			MX8MMN(IOMUXC_SAI3_TXC_GPIO5_IO0, 0x16)
		>;
	};

	pinctrl_pwm4: pwm4grp {
		fsl,pins = <
			MX8MMN(IOMUXC_GPIO1_IO15_PWM4_OUT, 0x16)
		>;
	};

	pinctrl_sc18is602b: sc18is602bgrp {
		fsl,pins = <
#undef  GP_SC18IS602B_RESET
