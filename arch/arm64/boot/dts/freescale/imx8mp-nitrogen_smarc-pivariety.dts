#include "imx8mp-nitrogen_smarc.dts"

/ {
	model = "Ezurio Nitrogen8MP SMARC board + Arducam Pivariety sensors";
	compatible = "ezurio,imx8mp-nitrogen_smarc-pivariety", "fsl,imx8mp";
};

&dewarp {
	status = "okay";
};

&i2c6a {
	/delete-node/ camera@10;

	pivariety_0: camera@c {
		compatible = "arducam,arducam-pivariety";
		reg = <0x0c>;
		clocks = <&csi_mclk>;
		clock-names = "xclk";
		reset-gpios = <&mcp23018 0 GPIO_ACTIVE_HIGH>;
		status = "okay";

		port {
			pivariety_0_ep: endpoint {
				remote-endpoint = <&mipi_csi0_ep>;
				clock-lanes = <0>;
				data-lanes = <1 2 3 4>;
			};
		};
	};
};


&i2c6b {
	/delete-node/ camera@10;

	pivariety_1: camera@c {
		compatible = "arducam,arducam-pivariety";
		reg = <0x0c>;
		clocks = <&csi_mclk>;
		clock-names = "xclk";
		reset-gpios = <&mcp23018 3 GPIO_ACTIVE_HIGH>;
		status = "okay";

		port {
			pivariety_1_ep: endpoint {
				remote-endpoint = <&mipi_csi1_ep>;
				clock-lanes = <0>;
				data-lanes = <1 2 3 4>;
				clock-noncontinuous;
				link-frequencies = /bits/ 64 <493500000>;
			};
		};
	};
};

&isi_0 {
	status = "okay";

	cap_device {
		status = "okay";
	};

	m2m_device {
		status = "okay";
	};
};

&isi_1 {
	status = "okay";

	cap_device {
		status = "okay";
	};
};

&isp_0 {
	status = "disabled";
};

&isp_1 {
	status = "disabled";
};

&mipi_csi_0 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	port@0 {
		reg = <0>;
		mipi_csi0_ep: endpoint {
			remote-endpoint = <&pivariety_0_ep>;
			data-lanes = <4>;
			csis-hs-settle = <30>;
			csis-clk-settle = <2>;
			csis-wclk;
		};
	};
};


&mipi_csi_1 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	port@1 {
		reg = <1>;
		mipi_csi1_ep: endpoint {
			remote-endpoint = <&pivariety_1_ep>;
			data-lanes = <4>;
			csis-hs-settle = <30>;
			csis-clk-settle = <2>;
			csis-wclk;
		};
	};
};
