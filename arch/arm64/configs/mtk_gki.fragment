#
# Platform selection
#
CONFIG_ARCH_MEDIATEK=y

#
# Misc devices
#
CONFIG_RPMB=m

#
# Serial drivers
#
CONFIG_SERIAL_8250_MT6577=m

#
# Random
#
CONFIG_HW_RANDOM_MTK=m

#
# I2C system bus drivers (mostly embedded / system-on-chip)
#
CONFIG_I2C_MT65XX=m

#
# MediaTek pinctrl drivers
#
CONFIG_EINT_MTK=m
CONFIG_PINCTRL_MTK_V2=m
CONFIG_PINCTRL_MTK_PARIS=m
CONFIG_PINCTRL_MT8188=m

#
# Watchdog Device Drivers
#
CONFIG_MEDIATEK_WATCHDOG=m

#
# Multifunction device drivers
#
CONFIG_MFD_MT6397=m

#
# Regulator
#
CONFIG_REGULATOR_MT6359=m

#
# VKMS
#
CONFIG_DRM_VKMS=m

#
# USB dual-mode controller drivers
#
CONFIG_USB_MTU3=m

#
# MMC/SD/SDIO Host Controller Drivers
#
CONFIG_MMC_MTK=m

#
# on-CPU RTC drivers
#
CONFIG_RTC_DRV_MT6397=m

#
# DMABUF options
#
CONFIG_DMABUF_HEAPS_SYSTEM=m

#
# Analog to digital converters
#
CONFIG_MEDIATEK_MT6359_AUXADC=m

#
# Clock driver for MediaTek SoC
#
CONFIG_COMMON_CLK_MEDIATEK=m
CONFIG_COMMON_CLK_MEDIATEK_FHCTL=m
CONFIG_COMMON_CLK_MT8188=m

#
# MediaTek SoC drivers
#
CONFIG_MTK_CMDQ=m
CONFIG_MTK_INFRACFG=m
CONFIG_MTK_PMIC_WRAP=m
CONFIG_MTK_MMSYS=m

#
# MediaTek PM Domains
#
CONFIG_MTK_SCPSYS=m
CONFIG_MTK_SCPSYS_PM_DOMAINS=m

#
# PHY Subsystem
#
CONFIG_PHY_MTK_TPHY=m

#
# TEE
#
CONFIG_TEE=m
CONFIG_OPTEE=m

#
# Mediatek drivers disable
#
CONFIG_PINCTRL_MT2712=n
CONFIG_PINCTRL_MT6397=n
