&usdhc2 {	/* WiFi */
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_usdhc2>;
	bus-width = <4>;
	non-removable;
	vmmc-supply = <&reg_wifi>;
	vqmmc-1-8-v;
	ocr-limit = <0x180>;     /* 1.65v - 2.1v */
	power-off-card;
	keep-power-in-suspend;
